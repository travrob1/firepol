{
  "name": "Question",
  "base": "PersistedModel",
  "idInjection": true,
  "accessTokenEnableCtxOption": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "question": {
      "type": "string",
      "required": false
    },
    "details": {
      "type": "string",
      "required": false
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "preinvite"
    },
    "closingTime": {
      "type": "date"
    },
    "votes": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "responses": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "views": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "odds": {
        "type": "number",
        "required": false
    }
  },
  "validations": [],
  "relations": {
    "Comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "questionId"
    },
    "FirepolUser": {
      "type": "belongsTo",
      "model": "FirepolUser",
      "foreignKey": "ownerId"
    },
    "Answers": {
      "type": "hasMany",
      "model": "Answer",
      "foreignKey": "questionId"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "property": "create",
      "principalType": "ROLE",
      "principalId": "facilitator",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
